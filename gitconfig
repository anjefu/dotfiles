[user]
        name = Jeff Ames
        email = jeff@anjefu.com
[alias]
        a = add
        ai = add --interactive

        b = branch -v
        ba = branch -a -v

        # add -C HEAD to caa?
        caa = commit -a --amend
        caam = commit -a --amend -m
        cam = commit -a -m
        ci = commit
        cm = commit -m

        co = checkout
        cp = cherry-pick
        d = diff
        f = fetch

        l = log
        lc = log ORIG_HEAD.. --stat --no-merges
        lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
        ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
        llog = log --date=local

        p = push

        rb = rebase

        r = reset
        r1 = reset HEAD^
        r2 = reset HEAD^^
        rh = reset --hard
        r1h = reset HEAD^ --hard
        r2h = reset HEAD^^ --hard

        s = status
        sm = submodule

        who = shortlog -s --
[core]
        excludesfile = ~/.gitignore_global
[push]
        default = simple
